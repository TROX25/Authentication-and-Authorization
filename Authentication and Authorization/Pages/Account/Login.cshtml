@page
@model Authentication_and_Authorization.Pages.Account.LoginModel

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row mb-3">
            <div class="col-2">
            <label asp-for="Cridential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Cridential.UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="Cridential.UserName"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Cridential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Cridential.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Cridential.Password"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>
</div>
