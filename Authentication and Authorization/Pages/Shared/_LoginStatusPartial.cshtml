@if (User != null && User.Identity is not null && User.Identity.IsAuthenticated)
{
    <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @* <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li> *@
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Account/login"> Login</a>
}